            android:paddingRight="2sp"
            android:paddingBottom="2sp"
            android:textSize="36sp"
            app:layout_column="1"
            app:layout_row="1"
            tools:text="5" />

        <Button
            android:id="@+id/btn_12"
            android:layout_width="105sp"
